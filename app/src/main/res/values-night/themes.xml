<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.LinkOrganizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/dark_gently_lighter</item>
        <item name="colorOnPrimary">@color/white_gently_dark</item>
        <item name="colorOnSecondaryContainer">#B8B8B8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/black_gently_lighter</item>

        <!-- Theme configuration -->
        <item name="backgroundColor">@color/dark</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SettingsDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SettingsDialogStyle</item>
    </style>

    <style name="SettingsDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">@color/white_gently_dark</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>

</resources>