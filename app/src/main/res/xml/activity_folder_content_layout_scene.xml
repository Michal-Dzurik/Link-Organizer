<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/addFolderBoxHidden">
        <Constraint android:id="@id/addLinkBox"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/add_folder_background"
            android:paddingHorizontal="17dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/addFolderBoxShowed">
        <Constraint android:id="@id/addLinkBox"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginBottom="-330dp"
            android:background="@drawable/add_folder_background"
            android:paddingHorizontal="17dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@id/addFolderBoxHidden"
        app:constraintSetEnd="@id/addFolderBoxShowed">
        <OnSwipe
            app:touchAnchorId="@id/addLinkBox"
            app:touchRegionId="@id/addLinkBox"
            app:dragDirection="dragUp"
            app:touchAnchorSide="bottom" />

    </Transition>

    <Transition
        app:constraintSetStart="@id/addFolderBoxShowed"
        app:constraintSetEnd="@id/addFolderBoxHidden">

    </Transition>
</MotionScene>
